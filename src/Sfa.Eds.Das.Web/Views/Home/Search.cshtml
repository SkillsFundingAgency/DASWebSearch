@using Sfa.Eds.Das.Web.Models
@model Sfa.Eds.Das.Web.Models.SearchResults
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Employer Apprenticeship Search</h1>
</div>

<div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-8">
        <div>
            <strong>Total results found:</strong> @Model.TotalResults
        </div>
    @foreach (var item in Model.Results)
    {
        <div><h3><strong>@item.Name</strong></h3></div>
        <div>@item.TextSnippet</div>
        <hr/>
    }
    </div>
    <div class="col-md-2">
    </div>
</div>