@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Sfa.Das.Sas.Shared.Components.ViewModels.Css.Interfaces
@model Sfa.Das.Sas.Shared.Components.ViewComponents.FatSearchViewModel
@inject ICssViewModel CssViewModel

<form asp-controller="Fat" asp-action="Search" method="get">
    <div class="@(CssViewModel.FormCss.FormGroup) das-form-group-inline">
        <input class="@(CssViewModel.FormCss.Input)" asp-for="Keywords" type="search" placeholder="Apprenticeship keyword...">
        <div class="das-form-group-inline__button-wrap">
            <button class="@(CssViewModel.Button)" type="submit">Search</button>
        </div>
    </div>
</form>