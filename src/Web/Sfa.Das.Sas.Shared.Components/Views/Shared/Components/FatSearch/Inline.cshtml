@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Sfa.Das.Sas.Shared.Components.ViewComponents.FatSearchViewModel
@inject Sfa.Das.Sas.Shared.Components.Domain.Interfaces.ICssClasses CssClasses

<form asp-controller="Fat" asp-action="Search">
    <div class="@(CssClasses.FormGroup) das-form-group-inline">
        <input class="@(CssClasses.Input)" asp-for="Keywords" type="search" placeholder="Apprenticeship keyword...">
        <div class="das-form-group-inline__button-wrap">
            <button class="@(CssClasses.Button)" type="submit">Search</button>
        </div>
    </div>
</form>