@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Sfa.Das.Sas.Shared.Components.ViewComponents.FatSearchViewModel
@inject Sfa.Das.Sas.Shared.Components.Domain.Interfaces.ICssClasses CssClasses;

<form action="@Model.FatSearchRoute">
    <div class="@(CssClasses.FormGroup)">
        <input class="@(CssClasses.Input)" asp-for="Keywords" type="search" placeholder="Apprenticeship keyword...">

    </div>
    <div class="@(CssClasses.FormGroup)">
        <button type="submit" class="@(CssClasses.Button)">
            Search
        </button>
    </div>
</form>