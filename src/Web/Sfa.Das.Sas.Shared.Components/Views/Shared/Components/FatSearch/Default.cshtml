@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Sfa.Das.Sas.Shared.Components.ViewComponents.FatSearchViewModel
@inject Sfa.Das.Sas.Shared.Components.Domain.Interfaces.ICssViewModel CssViewModel;

<form action="@Model.FatSearchRoute">
    <div class="@(CssViewModel.FormGroup)">
        <input class="@(CssViewModel.Input)" asp-for="Keywords" type="search" placeholder="Apprenticeship keyword...">

    </div>
    <div class="@(CssViewModel.FormGroup)">
        <button type="submit" class="@(CssViewModel.Button)">
            Search
        </button>
    </div>
</form>