@using Sfa.Das.Sas.Shared.Components.ViewModels.Css.Interfaces
@model Tuple<Sfa.Das.Sas.Shared.Components.ViewComponents.Fat.TrainingProviderSearchResultsItem,Sfa.Das.Sas.Shared.Components.ViewComponents.TrainingProvider.Search.TrainingProviderSearchViewModel>
@inject ICssViewModel CssViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<li id="@Model.Item1.Ukprn">
    <article class="das-search-result">
        <h2 class="@CssViewModel.HeadingMedium @CssViewModel.UtilitiesCss.Margin("bottom",0)">
            <a class="@CssViewModel.Link" href="/TrainingProvider/Details?ukprn=@Model.Item1.Ukprn&apprenticeshipId=@Model.Item2.ApprenticeshipId&LocationId=@Model.Item1.LocationId">@Model.Item1.Name</a>
        </h2>


        <dl class="@CssViewModel.List @CssViewModel.UtilitiesCss.Margin("bottom",0) @CssViewModel.UtilitiesCss.Margin("top",0)">
            <dt class="@CssViewModel.UtilitiesCss.FontWeightBold">Distance:</dt>
            <dd>@Model.Item1.Distance miles away</dd>
            <dt class="@CssViewModel.UtilitiesCss.FontWeightBold">Training options:</dt>
            <dd>@string.Join(",", Model.Item1.DeliveryModes)</dd>
            <dt class="@CssViewModel.UtilitiesCss.FontWeightBold">National provider:</dt>
            <dd>@(Model.Item1.NationalProvider ? "Yes" : "No")</dd>
            <dt class="@CssViewModel.UtilitiesCss.FontWeightBold">Employer satisfaction:</dt>
            <dd>@Model.Item1.EmployerSatisfaction%</dd>
            <dt class="@CssViewModel.UtilitiesCss.FontWeightBold">Learner satisfaction:</dt>
            <dd>@Model.Item1.LearnerSatisfaction%</dd>
            <dt class="@CssViewModel.UtilitiesCss.FontWeightBold">Achievement rate:</dt>
            <dd>@Model.Item1.OverallAchievementRate%</dd>
        </dl>
    </article>
</li>


