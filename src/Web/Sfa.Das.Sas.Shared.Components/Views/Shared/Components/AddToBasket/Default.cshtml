@using Sfa.Das.Sas.Shared.Components.ViewModels.Css.Interfaces
@model Sfa.Das.Sas.Shared.Components.ViewComponents.Basket.AddToBasketViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject ICssViewModel CssViewModel

@{ 
    var buttonStatusClassSuffix = Model.IsInBasket ? "checked" : "unchecked";
    var buttonText = Model.IsInBasket ? "Favourite Added" : "Add to Favourites";
}

<button type="submit" class="das-search-result__favourite-button--@buttonStatusClassSuffix" name="apprenticeshipId" value="@Model.ApprenticeshipId">
    @buttonText
</button>

