@using Sfa.Das.Sas.Shared.Components.ViewModels.Css.Interfaces
@model Sfa.Das.Sas.Shared.Components.ViewComponents.Basket.BasketIconViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject ICssViewModel CssViewModel

@if (Model.ItemCount > 0)
{
    <li class="navigation__list-item">
        <a asp-controller="Basket" asp-action="View" class="favourites-link favourites-link--filled navigation__link--top-level">
            <span class="favourites-link__count">@Model.ItemCount</span>
            <span class="favourites-link__text">Favourites</span>
        </a>
    </li>
}
else
{
    <li class="navigation__list-item">
        <a asp-controller="Basket" asp-action="View" class="favourites-link navigation__link--top-level">
            <span class="favourites-link__text">Favourites</span>
        </a>
    </li>
}
