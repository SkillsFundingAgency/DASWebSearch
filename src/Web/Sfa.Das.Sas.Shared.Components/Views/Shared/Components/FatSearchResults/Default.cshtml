@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Sfa.Das.Sas.Shared.Components.ViewComponents.Fat
@model Sfa.Das.Sas.Shared.Components.ViewComponents.Fat.FatSearchResultsViewModel



@if (Model.TotalResults > 0)
{
    <p>There are @Model.TotalResults apprenticeships matching your search for '@Model.Keywords'.</p>
    <ol class="@Model.CssClasses.List">
        @foreach (var result in Model.SearchResults)
        {
            <partial name="Components/FatSearchResults/_searchResultsItem" for="@result" />
        }
    </ol>
}
else
{
    <p>Sorry, there is currently no apprenticeship training for '<span class="govuk-!-font-weight-bold">@Model.Keywords</span>'.</p>

    <h3 class="@Model.CssClasses.HeadingSmall">Try a new search</h3>
    @await Component.InvokeAsync("FatSearch")
}

@if (Model.TotalResults > Model.ResultsToTake)
{

    <ul class="das-pagination pagination--employer">
        @if (Model.CurrentPage > 1)
        {
            <li class="das-pagination__list-item">
                <a class="das-pagination__link das-pagination__link--previous" id="link-pagination-previous" href="/apprentice/application">Previous page </a>

            </li>
        }

        @if (Model.CurrentPage < Model.LastPage)
        {
            <li class="das-pagination__list-item">
                <a class="das-pagination__link das-pagination__link--next" id="link-pagination-apprentice-next" href="/apprentice/your-apprenticeship">Next page </a>
            </li>
        }

    </ul>
}