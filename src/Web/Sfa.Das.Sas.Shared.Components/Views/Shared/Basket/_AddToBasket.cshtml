@model Sfa.Das.Sas.Shared.Components.ViewModels.AddToBasketModel
@using Sfa.Das.Sas.Shared.Components.ViewModels.Css.Interfaces
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject ICssViewModel CssViewModel


<form asp-controller="Basket" asp-action="Add" method="post">
    <div class="@(CssViewModel.FormCss.FormGroup)">
        <button type="submit" class="@(CssViewModel.Button)">
            Add to Favourites
        </button>
        <input type="hidden" name="apprenticeshipId" value="@Model.ApprenticeshipId" />
        <input type="hidden" name="ukprn" value="@Model.Ukprn" />
    </div>
</form>