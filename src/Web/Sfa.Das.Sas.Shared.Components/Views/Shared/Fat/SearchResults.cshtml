@using Sfa.Das.Sas.ApplicationServices.Commands
@model Sfa.Das.Sas.Shared.Components.ViewModels.SearchQueryViewModel

@if (Model.AddRemoveBasketResponse != null)
{
    <div class="addRemoveNotification_I_Guess">
        @if (Model.AddRemoveBasketResponse.BasketOperation == BasketOperation.Added)
        {
            <div>Green tick</div>
            <div>You've added <strong>@Model.AddRemoveBasketResponse.ApprenticeshipName</strong> to your shortlist</div>
        }
        else
        {
            <div>Red bin</div>
            <div>You've removed <strong>@Model.AddRemoveBasketResponse.ApprenticeshipName</strong> from your shortlist</div>
        }
    </div>
}

@await Component.InvokeAsync("FatSearchFilter", new { searchQueryModel = Model })

@await Component.InvokeAsync("FatSearchResults", new { searchQueryModel = Model })