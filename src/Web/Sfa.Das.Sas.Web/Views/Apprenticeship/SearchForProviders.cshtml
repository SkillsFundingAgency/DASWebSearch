@using Sfa.Das.Sas.Web.Extensions
@model Sfa.Das.Sas.Web.ViewModels.ProviderSearchViewModel
@{
    ViewBag.Title = "Search for providers";
}

<main id="content">
    <hgroup class="hgroup">
        <h1 class="heading-xlarge">
            Find a training provider
        </h1>
        <p class="lede">
            For <strong>@Model.Title</strong>:
        </p>
    </hgroup>

    <div class="grid-row">
        <div class="column-two-thirds">
    
            <form action="@Model.PostUrl" class="postcode-form search-box" method="get">

                <div class="form-elements  @(Model.HasError || Model.WrongPostcode || Model.PostcodeCountry == "Wales" || Model.PostcodeCountry == "Scotland" || Model.PostcodeCountry == "NorthernIreland" ? " error" : "")">
                    <div class="heading-group">
                        <h2 class="heading-medium">
                            Enter a postcode
                        </h2>
                        <p>For example: 'SW1A 2AA'</p>
                    </div>

                    <label class="form-label" for="search-box">
                        Enter the full postcode of your apprentice’s workplace
                        
                        @ShowErrorMessage(Model.HasError, Model.WrongPostcode, Model.PostcodeCountry)

                        
                    </label>
                    <div class="form-group">
                        <input type="hidden" name="apprenticeshipid" class="text-box form-control" value="@Model.ApprenticeshipId">
                        <input type="hidden" name="keywords" class="text-box form-control" value="@Model.SearchTerms">
                        <input type="search" name="PostCode" value="@Model.PostCode.FormatPostcode()" id="search-box" class="text-box form-control postcode-search-box" maxlength="200" placeholder="">

                    </div>

                    <fieldset class="inline">
                        <legend>
                            <span class="form-label-bold">Does your organisation pay the Apprenticeship Levy?</span>
                        </legend>
                        <div class="form-group">
                            <label class="block-label selection-button-radio" for="pay-levy-yes">
                                <input id="pay-levy-yes" type="radio" name="pay-levy" value="Yes">
                                Yes
                            </label>
                            <label class="block-label selection-button-radio" for="pay-levy-no">
                                <input id="pay-levy-no" type="radio" name="pay-levy" value="No">
                                No
                            </label>
                        </div>

                        <details>
                            <summary><span class="summary">What is the Apprenticeship Levy?</span></summary>
                            <div class="panel panel-border-narrow">
                                <p>Employers with an annual pay bill of more than £3 million must spend 0.5% of their total PAYE bill on an apprenticeship levy.</p>
                                <p><a href="" rel="external" target="_blank">Find out more about the apprenticeship levy</a></p>
                            </div>
                        </details>

                    </fieldset>

                    <div class="form-row">
                        <input class="button margin-top-x2 postcode-search-button" type="submit" value="Search">
                    </div>

                </div>
            </form>
            
            <div class="notice">
                <i class="icon icon-important">
                    <span class="visuallyhidden">Warning</span>
                </i>
                <strong class="bold-small">
                    This service contains details of training providers who currently offer apprenticeships.
                    It will be updated in 2017 to reflect the new register of apprenticeship training providers.
                </strong>
            </div>

        </div>
    </div>
</main>

@helper ShowErrorMessage(bool hasError, bool wrongPostcode, string postcodeCountry)
{
    if(hasError)
    {
        <span class="error-message">
            Sorry, postcode search not working, please try again later
        </span>
    }
    else if (wrongPostcode)
    {
        <span class="error-message">
            You must enter a full and valid postcode
        </span>
    }
    else if (postcodeCountry != null)
    {
        <span class="error-message">
            The postcode entered is not in England.
        </span>
        switch (postcodeCountry.ToLower())
        {
            case "wales":
                <span class="error-message">
                    Information about apprenticeships in <a href="https://businesswales.gov.wales/skillsgateway/apprenticeships">Wales</a>
                </span>
                break;
            case "northernireland":
                
                <span class="error-message">
                    Information about apprenticeships in <a href="https://www.nibusinessinfo.co.uk/content/apprenticeships-employers">Northern Ireland</a>
                </span>
                break;
            case "scotland":
                <span class="error-message">
                    Information about apprenticeships in <a href="https://www.apprenticeships.scot/">Scotland</a>
                </span>
                break;
        }
    }
}