@using Sfa.Das.Sas.Web.Extensions
@using SFA.DAS.Apprenticeships.Api.Types
@model Sfa.Das.Sas.Web.ViewModels.ProviderSearchViewModel
@{
    ViewBag.Title = "Search for providers";
    ViewBag.Description = "The Find Apprenticeship Training service is for employers in England who want to find training courses for their apprentices and search for training providers.";
}

<main id="content">
    @switch (Model.ApprenticeshipType)
    {
        case ApprenticeshipTrainingType.Framework:
            @Html.ActionLink("Back", "Framework", new { @keywords = Model.SearchTerms, @id = Model.ApprenticeshipId, @ukprn = Model.Ukprn }, new { @class = "link-back" })
            break;
        case ApprenticeshipTrainingType.Standard:
            @Html.ActionLink("Back", "Standard", new { @keywords = Model.SearchTerms, @id = Model.ApprenticeshipId, @ukprn = Model.Ukprn }, new { @class = "link-back" })
            break;
    }
    <h1 class="heading-xlarge">
        Find a training provider
    </h1>
    <p class="lede">
        For <strong>@Model.Title</strong>:
    </p>

    <div class="grid-row">
        <div class="column-two-thirds">


            <form action="@Model.PostUrl" method="get" class="postcode-form">
                <div class="postcode-search-form">
                    <h2 class="heading-medium">
                        Enter a postcode
                    </h2>
                    <div class="form-group @(Model.HasError ? "error" : "")" data-validation="You must enter a full and valid postcode">
                        <label for="search-box">
                            <span class="form-label-bold">Enter the full postcode of your apprentice's workplace</span>
                            <span class="form-hint">For example: 'SW1A 2AA'</span>

                            <span class="error-message">
                                <span id="error-postcode-service">
                                    @Html.Raw(@Model.ErrorMessage)
                                </span>
                            </span>

                        </label>
                        <input type="search" name="PostCode" value="@Model.PostCode.FormatPostcode()" id="search-box" class="form-control postcode-search-box" maxlength="200" placeholder="" />
                    </div>

                    <div>
                        <div class="form-group" data-validation="Select an option">
                            <fieldset class="inline">
                                <legend>
                                    <span class="form-label-bold">Is your organisation a <a href="https://www.gov.uk/government/publications/apprenticeship-levy-how-it-will-work/apprenticeship-levy-how-it-will-work#pay-apprenticeship-levy" target="_blank">levy-payer</a> or are you going to receive a transfer of funds from another employer to pay for this apprenticeship?</span>
                                    <span class="form-hint">
                                        We use this information to show you approved training providers that can work with organisations of your size
                                    </span>
                                    <span class="error-message"></span>
                                </legend>
                                <label class="block-label selection-button-radio" id="levyPaying">
                                    <input type="radio" name="IsLevyPayingEmployer" checked="@(Model.IsLevyPayingEmployer.HasValue && Model.IsLevyPayingEmployer.Value)" value="true" />
                                    Yes
                                </label>
                                <label class="block-label selection-button-radio" id="notLevyPaying">
                                    <input type="radio" name="IsLevyPayingEmployer" checked="@(Model.IsLevyPayingEmployer.HasValue && Model.IsLevyPayingEmployer.Value == false)" value="false" />
                                    No
                                </label>
                            </fieldset>
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="hidden" name="apprenticeshipid" class="text-box form-control" value="@Model.ApprenticeshipId">
                        <input type="hidden" name="keywords" class="text-box form-control" value="@Model.SearchTerms">
                        <input type="hidden" name="ukprn" class="text-box form-control" value="@Model.Ukprn">
                        <input class="button postcode-search-button" type="submit" value="Search">
                    </div>
                </div>
            </form>
        </div>
    </div>
</main>