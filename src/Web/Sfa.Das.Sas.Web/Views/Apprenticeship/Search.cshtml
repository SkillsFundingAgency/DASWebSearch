@model Sfa.Das.Sas.ApplicationServices.Queries.ApprenticeshipSearchQuery
@{
    ViewBag.Title = "Home Page";
    ViewBag.Description = "The Find Apprenticeship Training service is for employers in England who want to find training courses for their apprentices and search for training providers.";
}
<main id="content" role="main">
    <div class="grid-row">
        <div class="column-two-thirds">

            <h1 class="heading-xlarge">
                Find apprenticeship training
            </h1>

            @using (Html.BeginForm("SearchResults", "Apprenticeship", FormMethod.Get, new {@class = "search-box"}))
            {
                <div class="form-group">
                    <span>Search by keywords</span>
                    <legend>

                        <label class="text-secondary" for="keywords">
                            Can include job title or apprenticeship
                        </label>

                        <span class="error-message"></span>
                    </legend>
                    <input type="search" id="keywords" name="Keywords" class="text-box form-control" maxlength="200" placeholder="">
                </div>
                <input class="button margin-top-x2" id="submit-keywords" type="submit" value="Search"/>
            }

        </div>
    </div>
</main>