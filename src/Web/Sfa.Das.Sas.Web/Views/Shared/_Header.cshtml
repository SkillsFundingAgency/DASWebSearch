@model Sfa.Das.Sas.Web.ViewModels.HeaderViewModel
@{var gtmTrackingId = System.Configuration.ConfigurationManager.AppSettings["ga.gtm.trackingid"];}
@if (Model.ShowGoogleTagManager)
{
    <!--Google Tag Manager (noscript)-->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=@gtmTrackingId" height="0" width="0" style="display:none;visibility:hidden"></iframe ></noscript>
    <!--End Google Tag Manager(noscript)-->
}
@if (Model.ShowCookieBanner)
{
    <div id="global-cookie-message" class="cookie-banner">
        <div class="content-container" role="alert">
            <span class="copy-16">Education and Skills Funding Agency (ESFA) uses cookies to make the site simpler. <a href="/cookies">Find out more about cookies</a></span>
        </div>
    </div>
}
<header role="banner" id="global-header" class="global-header">
    <div class="global-header__wrapper">
        <div class="global-header__title">
            <a href="/" title="Go to find apprenticeship training homepage">
                Find apprenticeship training
            </a>
        </div>
</div>
</header>