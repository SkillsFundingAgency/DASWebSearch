@{
    ViewBag.Title = "Find Apprenticeship Training | Education and Skills Funding Agency";
    ViewBag.Description = "The Find Apprenticeship Training service is for employers in England who want to find training courses for their apprentices and search for training providers.";
}
<main id="content" role="main">
    <div class="grid-row">
        <div class="column-two-thirds">
            <hgroup>
                <h1 class="heading-xlarge">
                    Find apprenticeship training
                </h1>
            </hgroup>
            <p>For employers looking to take on apprentices.</p>

            <p>Use this service to:</p>

            <ul class="list list-bullet">
                <li>search for apprenticeship training by job role or keyword</li>
                <li>find training providers who offer the apprenticeship training you choose</li>
                <li>find a named training provider you want to use</li>
            
            </ul>
            
            @Html.ActionLink("Start", "Search", "Apprenticeship", null, new { id = "start-button", @class = "button margin-top-x2 button-start" })

            <h2 class="heading-medium">Help</h2>
            <p>You can contact the National Apprenticeship Service for advice or help using the service.</p>
            <div class="contact">
                <p>
                    <strong>National Apprenticeship Service</strong><br>
                    Telephone: 0800 015 0600
                    <a href="https://www.gov.uk/call-charges">Find out about call charges</a>
                </p>
            </div>

        </div>
    </div>
</main>