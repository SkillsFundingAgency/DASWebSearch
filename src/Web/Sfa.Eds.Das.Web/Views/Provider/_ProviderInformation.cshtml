@using Sfa.Das.ApplicationServices.Models
@using Sfa.Eds.Das.Web.ViewModels
@model Sfa.Eds.Das.Web.ViewModels.ProviderSearchResultViewModel

    @foreach (var item in Model.Hits)
    {
        <article class="result">
            <header>
                <h2 class="result-title">
                    @Html.ActionLink(item.Name, "Detail", "Provider", new { @providerId = item.Id, @locationId = item.LocationId, @standardCode = item.StandardCode }, null)
                </h2>
            </header>

            <dl class="result-data-list">
                @if (item.DeliveryModes != null && item.DeliveryModes.Contains("100PercentEmployer"))
                {
                    @RenderEmployersLocationProviderDetails(item)
                }
                else
                {
                    @RenderProviderDetails(item)
                }
                
                <dt>Employer satisfaction:</dt>
                <dd>@item.EmployerSatisfaction %</dd>
                <dt>Learner satisfaction:</dt>
                <dd>@item.LearnerSatisfaction %</dd>
            </dl>
        </article>
    }

@helper  RenderEmployersLocationProviderDetails(ProviderResultItemViewModel item)
{
    <dt>Distance:</dt>
    <dd>Training can take place at your location.</dd>
    <dt>Website:</dt>
    <dd><a class="link" href="@item.Website"> @item.Website</a></dd>
}

@helper  RenderProviderDetails(ProviderResultItemViewModel item)
{
    <dt>Distance:</dt>
    <dd>@item.Distance miles away</dd>
    <dd class="address">@item.LocationName @item.Address.Address1 @item.Address.Address2 @item.Address.County</dd>
    <dt>Website:</dt>
    <dd><a href="@item.Website"> @item.Website</a></dd>
}